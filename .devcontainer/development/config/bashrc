# ~/.bashrc: executed by bash(1) for non-login shells.

# Default Ubuntu bashrc content
[ -z "$PS1" ] && return
HISTCONTROL=ignoredups:ignorespace
shopt -s histappend
HISTSIZE=1000
HISTFILESIZE=2000
shopt -s checkwinsize
[ -x /usr/bin/lesspipe ] && eval "$(SHELL=/bin/sh lesspipe)"

if [ -z "${debian_chroot:-}" ] && [ -r /etc/debian_chroot ]; then
    debian_chroot=$(cat /etc/debian_chroot)
fi

case "$TERM" in
    xterm-color|*-256color) color_prompt=yes;;
esac

if [ "$color_prompt" = yes ]; then
    PS1='${debian_chroot:+($debian_chroot)}\[\033[01;32m\]\u@\h\[\033[00m\]:\[\033[01;34m\]\w\[\033[00m\]\$ '
else
    PS1='${debian_chroot:+($debian_chroot)}\u@\h:\w\$ '
fi
unset color_prompt

case "$TERM" in
xterm*|rxvt*)
    PS1="\[\e]0;${debian_chroot:+($debian_chroot)}\u@\h: \w\a\]$PS1"
    ;;
esac

if [ -f ~/.bash_aliases ]; then
    . ~/.bash_aliases
fi

if ! shopt -oq posix; then
  if [ -f /usr/share/bash-completion/bash_completion ]; then
    . /usr/share/bash-completion/bash_completion
  elif [ -f /etc/bash_completion ]; then
    . /etc/bash_completion
  fi
fi

# Short welcome banner
echo ""
echo "Open-O EMR Development Environment"
echo "Type 'help-dev' for development tools and commands"
echo ""

# Aliases for common tasks
alias ll='ls -alF'
alias la='ls -A'
alias l='ls -CF'
alias ..='cd ..'
alias ...='cd ../..'
alias grep='grep --color=auto'
alias fgrep='fgrep --color=auto'
alias egrep='egrep --color=auto'

# EMR-specific aliases
alias build='mvn clean compile'
alias test-build='mvn test'
alias package-war='mvn package'
alias db-connect='mysql -h db -u root -ppassword oscar'
alias logs-tomcat='tail -f /usr/local/tomcat/logs/catalina.out'
alias claude-help='cat CLAUDE.md | head -50'

# Documentation server aliases
alias docs='docs-status'
alias docs-logs='tail -f /tmp/docusaurus.log'

# Development help command with pager support
alias help-dev='cat << "EOF" | less
=============================================================
Open-O EMR Development Environment - Command Reference
=============================================================

AI CODING ASSISTANTS:
  claude         - Claude Code CLI (Anthropic)
  aider          - AI pair programming assistant
  aider --model claude-3-5-sonnet-20241022
  aider --model gpt-4-turbo

DEVELOPMENT TOOLS:
  mvn clean compile    - Build Java project
  mvn test            - Run tests
  mvn package         - Package WAR file
  gh pr create        - Create GitHub pull request
  gh pr list          - List pull requests

DOCUMENTATION:
  docs-start          - Start documentation server (port 3000)
  docs-stop           - Stop documentation server  
  docs-status         - Check documentation server status
  docs-logs           - View documentation server logs

DATABASE:
  mysql -h db -u root -ppassword oscar  - Connect to database
  db-connect                             - Database connection alias

CONTAINER INFO:
  Main app:  http://localhost:8080
  Debug:     port 8000
  Database:  port 3306
  Docs:      http://localhost:3000

HEALTHCARE EMR CONTEXT:
  • Follow PIPEDA/HIPAA compliance
  • Use 2Action pattern for Struts2 migration
  • All imports: ca.openosp.openo.* (new namespace)
  • OWASP encoding required for all user inputs

QUICK REFERENCE:
  cat CLAUDE.md       - View project context for AI
  git log --oneline   - Recent development activity
  docker ps           - View running containers
  debug-on / debug-off - Toggle DEBUG/INFO logging levels

ALIASES:
  build        - mvn clean compile
  test-build   - mvn test
  package-war  - mvn package
  db-connect   - Connect to database
  logs-tomcat  - Tail Tomcat logs
  claude-help  - Show project context for AI
  docs         - Check documentation server status
  docs-logs    - View documentation server logs

=============================================================
Ready for healthcare EMR development with AI assistance
=============================================================
EOF'

# Logging level control
alias debug-on='export LOGGING_LEVEL=DEBUG && echo "🔍 Logging set to DEBUG level"'
alias debug-off='export LOGGING_LEVEL=INFO && echo "ℹ️  Logging set to INFO level"'

# Set environment for better development experience
export EDITOR=nano
export JAVA_HOME=/opt/java/openjdk
export MAVEN_OPTS="-Xmx1G -Xms512m"

# Add workspace to PATH for any custom scripts
export PATH="/workspace/scripts:$PATH"